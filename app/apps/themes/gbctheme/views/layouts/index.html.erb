<!DOCTYPE html>
<html lang="en">
<head>
    <!-- META SECTION -->
    <title><%= current_site.the_title %></title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- END META SECTION -->
    <!-- turbolinks -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- camaleon  -->
    <%= stylesheet_link_tag theme_asset_path("css/main") %>
    <%= javascript_include_tag theme_asset_path("js/main.js") %>
     <!-- The head -->
    <%= raw the_head %>
</head>
<body >

    <!-- container -->
    <div >
        <!-- header -->
        <div  id="router" >
            <div class="container text-center">

                  <div class="row">
                        <div class="col-2"></div>
                        <div class="col-8">
                            <a id="logo"  href="<%= current_site.the_post_type("who-we-are").the_url %>"><%= image_tag current_site.the_logo, class: "img-fluid" %></a>
                        </div>
                        <div class="col-2">
                            <div  class="languagesblock orator text-right ">
                                    <ul id="languages" class="languages  ">
                                            <%=locale_link "TH",url_for( :locale => 'th' ),:th%>
                                            <span class="spacer">
                                                |
                                            </span>
                                            <%=locale_link "ENG",url_for( :locale => 'en' ),:en%>
                                    </ul>
                                    <a href="tel:+6620516060" class="phone">TEL: 02 051 6060</a>
                            </div>
                        </div>  
                </div>
                <div id="mobile-trigger" class="">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
            <nav class="text-center ">
                 <%= raw get_nav_menu('main_menu', 'roots orator')%>      
            </nav>
        </div>
        
        
        <!-- ./header -->
        <!-- body -->
        <div class="body">
            <%= yield %>
        </div>

         
        <!-- footer -->
        <footer style="display: block;">
            <%= render partial: 'partials/customerlogo' %> 
            <%= render partial: 'partials/footer' %>    
        </footer>
<!-- ./footer -->
</div>
<!-- ./container -->
